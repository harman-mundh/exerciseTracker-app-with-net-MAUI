<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="exerciseTracker.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:exerciseTracker.Views"
	xmlns:local="clr-namespace:exerciseTracker">

    <TabBar>
		<ShellContent
			Title="BMI"
			Icon="home.svg"
			ContentTemplate="{DataTemplate views:MainPage}" />
		<ShellContent
			Title="Camera"
			Icon="camera.svg"
			ContentTemplate="{DataTemplate views:CameraPage}" />
		<ShellContent
			Title="Diary"
			Icon="list.png"
			ContentTemplate="{DataTemplate views:DiaryPage}" />
	</TabBar>
</Shell>
