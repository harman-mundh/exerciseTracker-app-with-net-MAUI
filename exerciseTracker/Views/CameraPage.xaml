<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
			 xmlns:vm="clr-namespace:exerciseTracker.ViewModels"
			 x:Class="exerciseTracker.Views.CameraPage"
			 x:DataType="vm:CameraViewModel">
    
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Fill"
            HorizontalOptions="Fill">

            <cv:CameraView x:Name="cameraView" WidthRequest="300" HeightRequest="300"
                           CamerasLoaded="cameraView_CamerasLoaded"/>

            <Button Text="Smile!" Clicked="Button_Clicked" />

            <Image x:Name="imageView" WidthRequest="200" HeightRequest="200" />

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
